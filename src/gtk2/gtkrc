gtk-color-scheme = "base_color:#f7f7f7\nfg_color:#222222\ntooltip_fg_color:#000000\nselected_bg_color:#2EB3FF\nselected_fg_color:#ffffff\ntext_color:#222222\nbg_color:#f7f7f7\ntooltip_bg_color:#E7F3FD"

style "default" {

	GtkButton::inner-border = {8, 8, 5, 5}
	GtkCheckButton::indicator-size = 16

	#FIXME
	GtkCheckButton::indicator-spacing = 10

	GtkEntry::inner-border = {10, 10, 5, 5}
	GtkEntry::state-hint = 1

	GtkComboBox::arrow-size = 8 
	GtkSeparator::wide-separators = 1
	GtkSeparatorMenuitem::wide-separators = 1

	GtkMenu::horizontal-padding = 0
	GtkMenu::vertical-padding = 8
	GtkMenu::horizontal-offset = 1
	GtkMenuItem::arrow-spacing = 20 
	GtkMenuItem::toggle-spacing = 10
	GtkMenuItem::horizontal-padding = 8

	GtkMenuBar::shadow-type=GTK_SHADOW_NONE

	GtkProgressBar::min-horizontal-bar-height = 8
	GtkProgressBar::min-horizontal-bar-width = 16

	GtkNotebook::tab-overlap = -8 

	bg[NORMAL]        = @bg_color
        bg[PRELIGHT]      = shade (1.02, @bg_color)
        bg[SELECTED]      = @selected_bg_color
        bg[INSENSITIVE]   = @bg_color
        bg[ACTIVE]        = shade (0.9, @bg_color)

        fg[NORMAL]        = @fg_color
        fg[PRELIGHT]      = @fg_color
        fg[SELECTED]      = @selected_fg_color
        fg[INSENSITIVE]   = darker (@bg_color)
        fg[ACTIVE]        = @fg_color

        text[NORMAL]      = @text_color
        text[PRELIGHT]    = @text_color
        text[SELECTED]    = @selected_fg_color
        text[INSENSITIVE] = darker (@bg_color)
        text[ACTIVE]      = @selected_fg_color

        base[NORMAL]      = @base_color
        base[PRELIGHT]    = shade (0.95, @bg_color)
        base[SELECTED]    = @selected_bg_color
        base[INSENSITIVE] = @bg_color
        base[ACTIVE]      = shade (0.9, @selected_bg_color)

        xthickness = 1
        ythickness = 1
}

style "button" {
        xthickness = 4
        ythickness = 4

	bg[NORMAL] = "#e9e9e9"
	bg[PRELIGHT] = "#f8f8f8"
	bg[ACTIVE] = "#e9e9e9"
	bg[INSENSITIVE] = "#E1E1E1"

	fg[PRELIGHT] = "#95C6F4"
	fg[NORMAL] = @fg_color
	fg[ACTIVE] = "#2270B1"
	fg[SELECTED] = "red"
	

	engine "pixmap" {
		image {
			function=BOX
			state=NORMAL
			file="assets/button_normal.png"
			stretch=TRUE
			border={8, 8, 8, 8}
		}

		image {
			function=BOX	
			state=PRELIGHT
			file="assets/button_prelight.png"
